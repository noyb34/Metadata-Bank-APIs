{
    "title": "The Root Schema",
    "required": [
        "ManifestationClass",
        "ParentUID",
        "Title"
    ],
    "type": "object",
    "properties": {
        "ManifestationUID": {
            "pattern": "^(.*)$",
            "type": "string"
        },
        "ManifestationClass": {
            "minLength": 1,
            "pattern": "^(.*)$",
            "type": "string"
        },
        "ParentUID": {
            "minLength": 1,
            "pattern": "^(.*)$",
            "type": "string"
        },
        "Title": {
            "minLength": 1,
            "pattern": "^(.*)$",
            "type": "string"
        },
        "EidrId": {
            "pattern": "^(.*)$",
            "type": "string"
        },
        "ReferentType": {
            "transform": ["trim", "toEnumCase"],
            "type": "string",
            "enum": [
                "Series",
                "Season",
                "TV",
                "Movie",
                "Short",
                "Web",
                "Compilation",
                "Supplemental"
            ]
        },
        "StructuralType": {
            "transform": ["trim", "toEnumCase"],
            "type": "string",
            "enum": [
                "Abstraction",
                "Performance",
                "Digital"
            ]
        },
        "ActualLength": {
            "pattern": "^(.*)$",
            "type": "string"
        },
        "ReleaseDate": {
            "pattern": "^(.*)$",
            "type": "string"
        },
        "EditUse": {
            "pattern": "^(.*)$",
            "type": "string"
        },
        "EditClass": {
            "pattern": "^(.*)$",
            "type": "string"
        },
        "PublishedStatus": {
            "pattern": "^(.*)$",
            "type": "string"
        },
        "Audio": {
            "required": [
                "AudioType",
                "ClosedCaption"
            ],
            "type": "object",
            "properties": {
                "Language": {
                    "pattern": "^(.*)$",
                    "type": "string"
                },
                "ClosedCaption": {
                    "pattern": "^(.*)$",
                    "type": "string"
                },
                "AudioType": {
                    "pattern": "^(.*)$",
                    "type": "string"
                }
            }
        },
        "Video": {
            "required": [
                "Vchip",
                "ei"
            ],
            "type": "object",
            "properties": {
                "Vchip": {
                    "pattern": "^(.*)$",
                    "type": "string"
                },
                "ei": {
                    "type": "boolean"
                }
            }
        },
        "UseWindowTermList": {
            "type": "array",
            "items": {
                "required": [
                    "Term"
                ],
                "type": "object",
                "properties": {
                    "Term": {
                        "minLength": 1,
                        "pattern": "^(.*)$",
                        "type": "string"
                    }
                }
            }
        },
        "ContentIDList": {
            "type": "array",
            "items": {
                "required": [
                    "ContentID"
                ],
                "type": "object",
                "properties": {
                    "ContentID": {
                        "pattern": "^(.*)$",
                        "type": "string"
                    }
                }
            }
        },
        "FileList": {
            "type": "array",
            "items": {
                "required": [
                    "EidrId",
                    "FileClass",
                    "ParentUID",
                    "StructuralType"
                ],
                "type": "object",
                "properties": {
                    "FileClass": {
                        "pattern": "^(.*)$",
                        "type": "string"
                    },
                    "AssetUID": {
                        "pattern": "^(.*)$",
                        "type": "string"
                    },
                    "ParentUID": {
                        "pattern": "^(.*)$",
                        "type": "string"
                    },
                    "ReferentType": {
                        "transform": ["trim", "toEnumCase"],
                        "type": "string",
                        "enum": [
                            "Series",
                            "Season",
                            "TV",
                            "Movie",
                            "Short",
                            "Web",
                            "Compilation",
                            "Supplemental"
                        ]
                    },
                    "StructuralType": {
                        "transform": ["trim", "toEnumCase"],
                        "type": "string",
                        "enum": [
                            "Abstraction",
                            "Performance",
                            "Digital"
                        ]
                    },
                    "FileName": {
                        "pattern": "^(.*)$",
                        "type": "string"
                    },
                    "FileDeliveryStatus": {
                        "pattern": "^(.*)$",
                        "type": "string"
                    },
                    "EidrId": {
                        "pattern": "^(.*)$",
                        "type": "string"
                    }
                }
            }
        },
        "ManifestationList": {
            "type": "array"
        }
    }
}