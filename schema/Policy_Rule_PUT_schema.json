            "Radio Simulcast",
            "Radio Origination",
            "School Off Air Recording",
            "Demonstration and Exhibition",
            "Clip Rights",
            "Learning Media",
            "Website",
            "Mobile Apps/Interactive",
            "Advertising and Promotion",
            "Merchandising",
            "Publishing: eBook and Print",
            "Music Rights",
            "Audio Streaming",
            "All Rights"
